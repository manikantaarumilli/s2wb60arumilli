extends layout
block content
  h1= title
  p Welcome to the jam 
  div(class="container-fluid")
        div(class="row")
            -
                let jam = [
                    {
                        "name": "Strawberry",
                        "cost": 11,
                        "quantity": "twenty two"
                    },
                    {
                        "name": "mixed",
                        "cost": 10,
                        "quantity": "twenty"
                    },
                    {
                        "name": "grape",
                        "cost": 15,
                        "quantity": "twenty three"
                    },                   
                ]
            each v,index in jam
                div(class="col-sm-2" onclick=`buy(${index})`) #{v.name}
                div(class="col-sm-2" onclick=`buy(${index})`) #{v.cost}
                div(class="col-sm-2" onclick=`buy(${index})`) #{v.quantity}
  script.                
        function buy(intemNo)
        {
              alert(`you purchased jam ${intemNo+1}`)
        }